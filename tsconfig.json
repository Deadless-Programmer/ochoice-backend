{
  "compilerOptions": {
    /* Environment */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",





    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Interop */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    /* Debugging */
    "sourceMap": true,
    "declaration": false,

    /* Module behavior */
    "isolatedModules": false,
    "verbatimModuleSyntax": false,

    /* Node type definitions */
    "types": ["node"]
  },
  "include": ["src"]
}
