{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"],

    // এই দুইটা লাইন যোগ করো — এটাই ম্যাজিক!
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "types/express.d.ts"    // এটাও যোগ করো
  ]
}