{
  "compilerOptions": {
    /* Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",

    /* Interop */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    /* Debugging */
    "sourceMap": true,
    "declaration": false,

    /* Node type definitions */
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
